<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato&family=Redressed&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>JoinnUS | Home</title>
  </head>
  <body>
    <!-- NAVBAR START -->
    <div class="navbar">
      <div class="inner-nav">
        <a id="main-a" href="/">
          <h1 id="logo">
            <span class="tag">!</span>Joinn<span class="tag">US</span>.com
          </h1>
        </a>
        <nav role="navigation">
          <ul>
            <a href="/create">Crear evento</a>
          </ul>
        </nav>
      </div>
    </div>
    <!-- NAVBAR END -->
    <header>Header</header>
    <main id="app">
      <div class="search">
        <form>
          <input type="text" placeholder="Search Event..." />
          <button>Search</button>
        </form>
      </div>
      <div class="events">
        <% for (let event of events) { %>
        <a href="/events/<%= event.eventSlug %>">
          <div class="event">
            <img
              src="https://s3-us-west-2.amazonaws.com/joinnus.com/user/1270939/act61de060a2a23c.jpg"
              alt="<%= event.eventName %>"
            />
            <div class="event-info">
              <h4><%= event.eventName %></h4>
              <div class="event-date">
                <svg
                  class="w-6 h-6 cal"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  ></path>
                </svg>
                <p>Sabado 12 feb. - 7:00 PM</p>
              </div>
              <div class="event-options">
                <p>Desde <span>S/ 69.00</span></p>
                <button>Comprar</button>
              </div>
            </div>
          </div>
        </a>
        <% } %>
      </div>
    </main>
    <footer>
      <p>
        &copy; 2022 Alejandro La Rosa. Check The Real
        <a href="https://www.joinnus.com/">JoinUS</a>
      </p>
    </footer>
  </body>
</html>
